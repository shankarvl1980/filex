<merge xmlns:android="http://schemas.android.com/apk/res/android"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"

	
		>
		
	<ImageView
		android:id="@+id/image_file"
		android:layout_height="30dp"
		android:layout_width="30dp"
		android:scaleType="centerCrop"

		/>
	<ImageView
		android:id="@+id/overlay_image_file"
		android:layout_height="30dp"
		android:layout_width="30dp"

		android:background="@null"
		android:padding="10dp"
		android:src="@drawable/play_overlay_icon"
		android:visibility="invisible"

	/>
	<TextView
		android:id="@+id/text_file_name"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:textColor="?attr/recycler_main_text_color"
		android:includeFontPadding="false"

		/>
	<ImageView
		android:id="@+id/file_select_indicator"
		android:layout_height="26dp"
		android:layout_width="26dp"
		android:src="@drawable/select_indicator_icon"
		android:visibility="invisible"

		/>

	<TextView
		android:id="@+id/text_subfile_count"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="start"
		android:textColor="?attr/recycler_text_color"

		/>


	<!--TextView
        android:id="@+id/text_file_permissions"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="center"

    /-->

	<TextView
		android:id="@+id/text_file_moddate"
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:gravity="end"
		android:textColor="?attr/recycler_text_color"
		/>

	<TextView
		android:id="@+id/text_file_path"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:textColor="?attr/recycler_text_color"
		android:visibility="gone"
		/>

</merge>
