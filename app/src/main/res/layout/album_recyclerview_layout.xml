<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_storage_list"
    android:padding="@dimen/layout_margin">

    <TextView
        android:id="@+id/album_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin"
        android:paddingHorizontal="@dimen/layout_margin"
        android:textColor="?attr/recycler_main_text_color"
        android:textSize="17sp"
        app:layout_constraintEnd_toStartOf="@id/album_image_dir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Album Name" />

    <TextView
        android:id="@+id/album_path"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/layout_margin"
        android:paddingHorizontal="@dimen/layout_margin"
        android:textColor="?attr/recycler_text_color"
        android:textSize="15sp"
        app:layout_constraintEnd_toStartOf="@id/album_image_dir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/album_name"
        tools:text="/storage/emulated/0/DCIM/Camera" />

    <ImageView
        android:id="@+id/album_image_dir"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginHorizontal="@dimen/layout_margin"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>