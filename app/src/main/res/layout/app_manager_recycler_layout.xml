<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/app_manager_recycler_layout"
    android:layout_height="wrap_content"

    >

<ImageView
        android:id="@+id/app_manager_app_image"
        android:layout_height="30dp"
        android:layout_width="30dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/app_manager_app_name"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:textColor="?attr/recycler_main_text_color"
        android:singleLine="true"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        app:layout_constraintStart_toEndOf="@id/app_manager_app_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/app_manager_app_package"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="start"
        android:textColor="?attr/recycler_text_color"
        android:singleLine="true"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        app:layout_constraintTop_toBottomOf="@id/app_manager_app_name"
        app:layout_constraintStart_toStartOf="@id/app_manager_app_name"
        />


    <TextView
        android:id="@+id/app_manager_size"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:textColor="?attr/recycler_text_color"
        android:singleLine="true"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_manager_app_name"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
