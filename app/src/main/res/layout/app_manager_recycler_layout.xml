<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/app_manager_recycler_layout"
    android:layout_height="wrap_content"
    android:paddingTop="8dp"
    android:paddingBottom="8dp"

    >

<ImageView
        android:id="@+id/app_manager_app_image"
        android:layout_height="34dp"
        android:layout_width="34dp"
        android:scaleType="centerCrop"

    android:layout_marginStart="9dp"
    android:layout_marginEnd="9dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"

        />

    <TextView
        android:id="@+id/app_manager_app_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textColor="?attr/recycler_main_text_color"
        android:singleLine="true"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@id/app_manager_app_image"
        app:layout_constraintTop_toTopOf="parent"
        />

    <TextView
        android:id="@+id/app_manager_app_package"
        android:layout_height="wrap_content"
        android:layout_width="0dp"
        android:gravity="start"
        android:textColor="?attr/recycler_text_color"
        android:singleLine="true"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintStart_toEndOf="@id/app_manager_app_image"
        app:layout_constraintTop_toBottomOf="@id/app_manager_app_name"
        app:layout_constraintEnd_toStartOf="@id/app_manager_size"
        />


    <TextView
        android:id="@+id/app_manager_size"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:gravity="end"
        android:textColor="?attr/recycler_text_color"
        android:singleLine="true"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/app_manager_app_name"
        />



</androidx.constraintlayout.widget.ConstraintLayout>
