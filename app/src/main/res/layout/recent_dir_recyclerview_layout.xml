<merge xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recent_image_storage_dir"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:scaleType="centerCrop" />

    <ImageView
        android:id="@+id/recent_play_overlay_image_storage_dir"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@null"
        android:src="@drawable/play_overlay_icon"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/recent_pdf_overlay_image_storage_dir"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:background="@null"
        android:src="@drawable/pdf"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/recent_text_storage_dir_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:minHeight="40dp"
        android:textColor="?attr/recycler_second_text_color"
        android:textSize="17sp"/>

</merge>


