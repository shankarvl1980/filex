<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_detail_grid_recyclerview"
    android:minHeight="44dp">

    <TextView
        android:id="@+id/default_app_mime_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/select_detail_grid_recyclerview"
        android:gravity="center_vertical"
        android:minHeight="44dp"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:textSize="17sp" />

    <ImageView
        android:id="@+id/default_app_image_view"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="8dp"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/default_app_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="@dimen/four_dp"
        android:layout_weight="1"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingHorizontal="@dimen/layout_margin"
        android:textSize="17sp" />

    <CheckBox
        android:id="@+id/default_app_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginEnd="@dimen/layout_margin"
        android:background="@null" />

</TableRow>