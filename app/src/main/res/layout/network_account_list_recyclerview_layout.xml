<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/select_detail_recyclerview"
    android:padding="@dimen/layout_margin">

    <ImageView
        android:id="@+id/network_list_recyclerview_network_image"
        android:layout_width="34dp"
        android:layout_height="34dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/network_list_recyclerview_display"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:maxLines="2"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:textColor="?attr/recycler_main_text_color"
        android:textSize="17sp"
        app:layout_constraintStart_toEndOf="@id/network_list_recyclerview_network_image"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/network_list_recyclerview_host"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:textColor="?attr/recycler_second_text_color"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/network_list_recyclerview_network_image"
        app:layout_constraintTop_toBottomOf="@id/network_list_recyclerview_display"

        />


    <TextView
        android:id="@+id/network_list_recyclerview_user_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_vertical"
        android:paddingStart="@dimen/layout_margin"
        android:paddingEnd="@dimen/layout_margin"
        android:paddingBottom="@dimen/layout_margin"
        android:textColor="?attr/recycler_second_text_color"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/network_list_recyclerview_network_image"
        app:layout_constraintTop_toBottomOf="@id/network_list_recyclerview_host"

        />

    <ImageView
        android:id="@+id/network_list_recyclerview_select_indicator"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:src="@drawable/select_indicator_icon"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />

    <ImageView
        android:id="@+id/network_list_recyclerview_connected_indicator"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/green_dot"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/network_list_recyclerview_select_indicator"
        app:layout_constraintTop_toTopOf="parent"

        />

</androidx.constraintlayout.widget.ConstraintLayout>


