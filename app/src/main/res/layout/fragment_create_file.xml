<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    >

    <TextView
        android:id="@+id/fragment_create_file_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"

        android:background="?attr/dialog_title"
        android:paddingStart="@dimen/ten_dp"
        android:paddingTop="@dimen/layout_margin"
        android:paddingEnd="@dimen/ten_dp"
        android:paddingBottom="@dimen/layout_margin"
        android:text="@string/create_file"
        android:textSize="19sp"

        />

    <ListView
        android:id="@+id/file_type_ListView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/dialog_background"
        android:divider="@android:color/darker_gray"
        android:dividerHeight="0.5dp"
        />


    <FrameLayout
        android:id="@+id/fragment_create_file_button_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/layout_margin" />

</LinearLayout>
