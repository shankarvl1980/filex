<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="MyLightBaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:textColor">@color/light_recycler_text_color</item>
        <item name="android:checkboxStyle">@style/MyLightCheckbox</item>
        <item name="radioButtonStyle">@style/MyLightRadioButton</item>
        <item name="android:windowBackground">@color/light_activity_background</item>


        <item name="android:colorPrimaryDark">@color/light_status_bar</item>
        <item name="toolbar_icon_color">@color/light_toolbar_icon_color</item>
        <item name="toolbar_text_color">@color/light_toolbar_text_color</item>
        <item name="icon_color">@color/light_icon_color</item>
        <item name="toolbar_background">@color/light_toolbar_background</item>
        <item name="recycler_main_text_color">@color/light_recycler_main_text_color</item>
        <item name="recycler_text_color">@color/light_recycler_text_color</item>
        <item name="heading_text_color">@color/light_heading_text_color</item>
        <item name="edit_text_color">@color/light_edit_text_color</item>
        <item name="activity_background">@color/light_activity_background</item>
        <item name="dialog_recyclerview_background">@color/light_dialog_recyclerview_background</item>
        <item name="filepath_recyclerview_background">@color/light_filepath_recyclerview_background</item>
        <item name="drawer_title">@color/light_drawer_title</item>
        <item name="dialog_title">@color/light_dialog_title</item>
        <item name="dialog_background">@color/light_dialog_background</item>
        <item name="list_popup_window_background">@color/light_list_popup_window_background</item>
        <item name="seek_bar_background">@color/light_seek_bar_background</item>
        <item name="seek_bar_secondary_progress">@color/light_seek_bar_secondary_progress</item>
        <item name="seek_bar_progress">@color/light_seek_bar_progress</item>
        <item name="seek_bar_thumb">@color/light_seek_bar_thumb</item>
        <item name="tab_select_text_color">@color/light_tab_select_text_color</item>
        <item name="item_select_text_color">@color/light_item_select_text_color</item>
        <item name="video_play_overlay_background">@color/light_video_play_overlay_background</item>
        <item name="select_color_picture_recyclerview">@color/light_select_color_picture_recyclerview</item>
        <item name="select_detail_recyclerview_pressed">@color/light_select_detail_recyclerview_pressed</item>

        <item name="drawer_icon_color">@color/light_drawer_icon_color</item>
        <item name="select_indicator_border_color">@color/light_select_indicator_border_color</item>
        <item name="select_indicator_fill_color">@color/light_select_indicator_fill_color</item>


    </style>

    <style name="MyLightFullScreen" parent="@style/MyLightBaseTheme">
        <item name="windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

        <item name="android:textColor">@color/light_recycler_text_color</item>
        <item name="android:checkboxStyle">@style/MyLightCheckbox</item>
        <item name="radioButtonStyle">@style/MyLightRadioButton</item>
        <item name="android:windowBackground">@color/light_activity_background</item>


    </style>



    <style name="MyLightDialog" parent="@style/Theme.AppCompat.DayNight.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:checkboxStyle">@style/MyLightCheckbox</item>
        <item name="radioButtonStyle">@style/MyLightRadioButton</item>

        <item name="android:textColor">@color/light_recycler_text_color</item>
        <item name="android:windowBackground">@color/light_activity_background</item>
        <item name="android:colorPrimaryDark">@color/light_status_bar</item>
        <item name="icon_color">@color/light_icon_color</item>
        <item name="toolbar_background">@color/light_toolbar_background</item>
        <item name="recycler_text_color">@color/light_recycler_text_color</item>
        <item name="heading_text_color">@color/light_heading_text_color</item>
        <item name="edit_text_color">@color/light_edit_text_color</item>
        <item name="activity_background">@color/light_activity_background</item>
        <item name="dialog_recyclerview_background">@color/light_dialog_recyclerview_background</item>
        <item name="filepath_recyclerview_background">@color/light_filepath_recyclerview_background</item>
        <item name="drawer_title">@color/light_drawer_title</item>
        <item name="dialog_title">@color/light_dialog_title</item>
        <item name="dialog_background">@color/light_dialog_background</item>
        <item name="seek_bar_background">@color/light_seek_bar_background</item>
        <item name="seek_bar_secondary_progress">@color/light_seek_bar_secondary_progress</item>
        <item name="seek_bar_progress">@color/light_seek_bar_progress</item>
        <item name="seek_bar_thumb">@color/light_seek_bar_thumb</item>

        <item name="water_color">@color/light_water_color</item>


    </style>




    <style name="MyLightCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:textColor">@color/light_recycler_text_color</item>
        <item name="android:buttonTint">@color/light_icon_color</item>

    </style>

    <style name="MyLightRadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/light_recycler_text_color</item>
        <item name="android:buttonTint">@color/light_icon_color</item>
    </style>

    <style name="MyLightEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/light_edit_text_color</item>
        <item name="android:background">@color/light_dialog_background</item>
    </style>

    <style name="MySwitchCompat" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/light_drawer_icon_color</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>
    </style>

    <style name="MyLightSwitchCompat" parent="Theme.AppCompat.DayNight">
        <item name="colorControlActivated">@color/light_icon_color</item>
        <item name="colorSwitchThumbNormal">@android:color/darker_gray</item>

    </style>

    <style name="my_scrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scrollbar</item>
    </style>

    <style name="custom_thumb_scrollbar">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:scrollbarThumbVertical">@drawable/scroll_thumb_icon</item>
    </style>




</resources>
